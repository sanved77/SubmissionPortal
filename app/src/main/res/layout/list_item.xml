<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.mikhaellopez.circularprogressbar"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView

        android:id="@+id/cvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="30"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/scr1"
                    android:layout_height="120dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="70"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fitness Plus +"
                    android:textColor="@color/black"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_marginTop="3dp"
                    android:text="Assignment 1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNum"
                    android:layout_marginTop="3dp"
                    android:text="01 / 15 / 2019"
                    android:textStyle="italic"
                    android:textColor="@color/red"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTime"
                    android:layout_marginTop="3dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="1.5"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:textStyle="bold"
                    android:text="Total Score - 32"
                    android:textColor="@color/green"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvScoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvScore"
                    android:layout_marginTop="3dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="1.5"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:textStyle="italic"
                    android:text="(8 ratings, average 4)"
                    android:textColor="@color/green"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvScoreInfo"
                    android:layout_marginTop="3dp"
                    android:shadowColor="@color/black"
                    android:shadowRadius="1.5"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:text="Rating - 4/5"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>